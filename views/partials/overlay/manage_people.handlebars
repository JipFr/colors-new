<div class="overlay_wrapper">
	<div class="overlay_inner overlay_inner_manage">
		<div class="inner_wrapper">
			<div class="card_top">
				<h2 class="title">Manage people</h2>
			</div>
			<div class="fields">

				<div class="input_div input_div_text">
					<label for="add_person">Add someone</label>
					<div class="input">
						<input id="add_person" placeholder="Username" autocomplete="off">
						<button class="btn_hover" onclick="toggle_person(this.closest('.input_div').querySelector('input').value, this.closest('[data-id]').getAttribute('data-id'))">Add</button>
					</div>
				</div>
				
				<div class="all_users">
					{{> util/small_user }}
				</div>
			
			</div>
		</div>
		<div class="overlay_btns">
			<button class="style cancel btn_hover" onclick="remove_overlays()">Exit</button>
		</div>
	</div>
</div>