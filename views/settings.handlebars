<link rel="stylesheet" href="settings.css">

<div class="settings_wrapper">
	
	<div class="settings_bit">
		<aside class="settings_aside">
			<h2 class="title">General settings</h2>
			<hr>
		</aside>
		<main class="settings_options">
			...
		</main>
	</div>

	<div class="settings_bit">
		<aside class="settings_aside">
			<h2 class="title">Profile settings</h2>
			<hr>
		</aside>
		<main class="settings_options">
			<div class="option input_div">
				<label for="change_username">Change your username</label>
				<div class="input">
					<input id="change_username" placeholder="piet" value="{{user.slug}}">
					<button onclick="set_username(this.closest('.option').querySelector('input').value)">Update</button>
				</div>
			</div>
			<div class="option input_div">
				<label for="change_username">Profile's color</label>
				<div class="input">
					<div class="color_picker_wrapper_alt" style="background: {{#if user.color}}{{user.color}}{{else}}#3d6a7b{{/if}}">
						<input onchange="this.parentNode.style.background = `${this.value}`" id="profile_color" type="color" value="{{#if user.color}}{{user.color}}{{else}}#3d6a7b{{/if}}">
					</div>
					<button onclick="set_color('#3d6a7b')">Reset</button>
					<button onclick="set_color(this.closest('.option').querySelector('input').value)">Update</button>
				</div>
			</div>
			<div class="option input_div">
				<label for="change_username">Account description</label>
				<div class="input textarea_input">
					<textarea id="change_username" placeholder="Hello, my name is {{user.user.displayName}}!" oninput="this.value.trim().length > 120 ? this.value = this.value.trim().slice(0, 120) : null;" max="120">{{get_bio user.bio}}</textarea>
					<button onclick="set_bio(this.closest('.option').querySelector('textarea').value)">Update</button>
				</div>
			</div>
		</main>
	</div>

</div>

<script src="/universal.js"></script>
<script src="settings.js"></script>